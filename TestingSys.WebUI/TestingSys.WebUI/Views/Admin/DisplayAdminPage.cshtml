@model TestingSys.Domain.Entities.User
@{
    ViewBag.Title = "DisplayAdminPage";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

    <html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <title></title>
    </head>
    <body>
        <div class="container-fluid p-0">

            <section class="resume-section p-3 p-lg-5 d-flex align-items-center" >
                <div class="w-100">
                    <h1 class="mb-0">
                        Admin
                        <span class="text-primary">Page</span>
                    </h1>
                    <div class="subheading mb-5">
                        @Model.Email
                    </div>
                    <p class="lead mb-5">You are the administrator of CourseOFF. You can edit courses and add questions to them. Also block customers and unlock them.</p>
                </div>
            </section>
            <hr class="m-0">

            <section class="resume-section p-3 p-lg-5 d-flex align-items-center" id="clients">
                <div class="w-100">
                    <h2 class="mb-5">Clients.</h2>

                    <div class="resume-item d-flex flex-column flex-md-row justify-content-between mb-5">
                        <div class="resume-content">
                            <h4>View all clients, with the ability to unlock or block the client.</h4>
                            <a class="btn btn-success"  href="~/Admin/DisplayUsers/">Go!</a>
                        </div>
                    </div>
                </div>
            </section>

            <hr class="m-0">

            <section class="resume-section p-3 p-lg-5 d-flex align-items-center" id="addcourse_questions">
                <div class="w-100">
                    <h2 class="mb-5">Add Course & Questions.</h2>
                    <div class="resume-item d-flex flex-column flex-md-row justify-content-between mb-5">
                        <div class="resume-content">
                            <h4>Ability to add a new course, name, complexity, time.</h4>
                            <h4> Also the ability to add tests to the selected course.</h4>
                            <br />
                            <a class="btn btn-success" href="~/Course/CreateCourse">Go!</a>
                            
                        </div>    
                    </div>
                </div>
            </section>

            <hr class="m-0">

            <section class="resume-section p-3 p-lg-5 d-flex align-items-center" id="delete_course">
                <div class="w-100">
                    <h2 class="mb-5">Delete Course.</h2>
                    <div class="resume-item d-flex flex-column flex-md-row justify-content-between mb-5">
                        <div class="resume-content">
                            <h4>Ability to delete any course.</h4>
                            <br />
                            <a class="btn btn-success" href="~/Course/CourseDelete/">Go!</a>
                        </div>
                    </div>


                </div>
            </section>

            <hr class="m-0">

            <section class="resume-section p-3 p-lg-5 d-flex align-items-center" id="edit_course">
                <div class="w-100">
                    <h2 class="mb-5">Edit Course.</h2>
                    <div class="resume-item d-flex flex-column flex-md-row justify-content-between mb-5">
                        <div class="resume-content">
                            <h4>The ability to change the course parameters of any course (time, name).</h4>
                            <br />
                            <a class="btn btn-success" href="~/Course/EditCourses/">Go!</a>                            
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </body>
    </html>
