@model TestingSys.Domain.Entities.User
@{
    ViewBag.Title = "PersonalArea";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

    <html xmlns="http://www.w3.org/1999/xhtml">
    <head>
    </head>
    <body>

        @section Head
                {
                <header class="masthead">
                    <div>
                        <div class="container h-100">
                            <div class="row  align-items-center justify-content-center text-center">
                                <div class="col-lg-8 align-self-baseline">
                                    
                                    <p style="padding-top:200px;" class="text-white-75 font-weight-light mb-5">We created CourseOFF a few weeks ago in a highly competitive market with the goal of not only launching a new style of online courses, but also increasing the level of participation and motivation of users.</p>
                                    <p class="text-white-75 font-weight-light mb-5">Welcome <b>@HttpContext.Current.User.Identity.Name</b> in CourseOFF.</p>
                                    <a class="btn btn-light btn-xl" href="~/Course/DisplayCourse">Pass another Test</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </header>
        }
    
    <main>

        <section class="page-section bg-dark text-white">
            <div class="container text-center ">
                <h2 class="mb-4">Personal data!</h2>
                <table class="container mb-4 table text-white">
                    <thead>
                        <tr>
                            <th>First Name:</th>
                            <th>Last name:</th>
                            <th>Email:</th>
                        </tr>
                    </thead>
                    <tbody class="">
                        <tr>
                            <th>@Model.FirstName</th>
                            <th>@Model.LastName</th>
                            <th>@Model.Email</th>
                        </tr>

                    </tbody>
                </table>
            </div>
        </section>

    </main>
    </body>
    </html>

