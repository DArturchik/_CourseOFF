@model IEnumerable<TestingSys.Domain.Entities.User>
@{
    ViewBag.Title = "DisplayManagerPage";
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}

    <html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <title></title>
    </head>
    <body>
        <div class="container-fluid p-0">

            <section class="resume-section p-3 p-lg-5 d-flex align-items-center">
                <div class="w-100">
                    <h1 class="mb-0">
                        Manager
                        <span class="text-primary">Page</span>
                    </h1>
                    <div class="subheading mb-5">
                    </div>
                    <p class="lead mb-5">You are the manager of CourseOFF. </p>
                </div>
            </section>
            <hr class="m-0">

            <section class="resume-section p-3 p-lg-5 d-flex align-items-center" id="clients">
                <div class="w-100">
                    <h2 class="mb-5">Clients.</h2>

                    <div class="resume-item d-flex flex-column flex-md-row justify-content-between mb-5">
                        <div class="resume-content">
                            <h4>View all clients in the system.</h4>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>
                                            Username:
                                        </th>
                                        <th>
                                            First Name:
                                        </th>
                                        <th>Last name:</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(x => item.Email)</td>
                                            <td>@item.FirstName</td>
                                            <td>@item.LastName</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </section>
            <hr class="m-0">

            <section class="resume-section p-3 p-lg-5 d-flex align-items-center" id="logging">
                <div class="w-100">
                    <h2 class="mb-5">Logging.</h2>
                    <div class="resume-item d-flex flex-column flex-md-row justify-content-between mb-5">
                        <div class="resume-content">
                            <h4>Customer actions.</h4>
                            <br />
                            <a class="btn btn-success" href="~/Manager/LoggingPage">Go!</a>

                        </div>
                    </div>
                </div>
            </section>

            <hr class="m-0">

            <section class="resume-section p-3 p-lg-5 d-flex align-items-center" id="exceptions">
                <div class="w-100">
                    <h2 class="mb-5">Exceptions.</h2>
                    <div class="resume-item d-flex flex-column flex-md-row justify-content-between mb-5">
                        <div class="resume-content">
                            <h4>The ability to timely identify possible errors and exceptions that may arise.</h4>
                            <br />
                            <a class="btn btn-success" href="~/Manager/ExceptionsPage/">Go!</a>
                        </div>
                    </div>
                </div>
            </section>

        </div>
    </body>
    </html>

